	<div class="container-fluid" style="background-image: url('/img/minimal.jpeg')">
	<div class="row">
	<div class="col-md-3"> </div> <!-- centers -->
    <div class="col-md-6"><br><br><br> <!-- resizes -->
    
    <div class="panel panel-default thread" style="border-radius: 12px;">
    <div class="panel-body">

  	<center>
	<h2> {{ thread.title}}</h2>
	</center>

	<h3>{{ thread.description }}</h3>

	<strong>Difficulty: </strong>
		{{ thread.difficulty }}
	<br>

	<strong>Purpose: </strong>
		{{ thread.purpose }}

	<br>
	<div class="pull-right">
		<h5>Posted by <b>{{thread.creator}}</b> on {{thread.createdAt}} <h5>
			

</div>
</div>

	</div>

	<form action="/thread/{{thread.id}}" method="post" enctype="multipart/form-data">
		<div class="file-field input-field">
			<div class = "btn grey">
				<span>Image upload here</span>
				<input type="file" name="uploadImage">
			</div>
		</div>

		{{!-- <input type="text" name="info"> --}}
		<textarea name="info" class="form-control" style="height: 100px; background:#F8F8F8;">
		</textarea>			
		<button type="submit" class="btn btn-default">Submit</button>
	</form>




<br>
	<div class="col-md-3">       
	</div>

	{{#each posts}}
		
		<div class="panel panel-default">
			<div class="pull-right">


            {{#if ../isCreator }}
				{{#unless highlighted}}
				<form action = "/thread/{{../thread.id}}/add/{{this.id}}" method = "post">
				<button name="colabButton" type="highlight" class="btn btn-default" postID="{{this.id}}" style="padding: 2px; font-size: 10px; margin: 4px">
				Collaborate
				</button>
				</form>
				{{else}}

				<button type="button" disabled class="btn btn-default"  style="padding: 2px; font-size: 10px; margin: 4px">
				Hired!
				</button>

				{{/unless}}
			{{/if}}



			</div>
		 <div class="panel-body" style="word-break: break-all; word-wrap: break-word;"> 
		 <div>
			{{ this.body }} 
		</div>
		<br>
		<img src="{{this.image}}" alt="{{this.image}}" />
		<br>

			<div class="pull-right">
			<h5>Posted by <b>{{this.creator}}</b> on {{this.createdAt}} </h5>
			</div>
		</div></div>
		
	{{/each}}

</div>
</div>
</div>